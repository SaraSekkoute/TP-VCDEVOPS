pipeline {
  environment {
    registry = "sarask66/tp1"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/SaraSekkoute/TP-VCDEVOPS'
      }
    }
     stage('Docker Login') {
      steps{
        sh 'docker login -u ${DOCKER_USERNAME} -P ${DOCKER_PW}'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Publish Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
  }
}